        <!--        />-->


        <menuitem id="menu_cash_root"
                  name="Cash Book"
                  parent="menu_reports_0"
                  sequence="7"/>
        <menuitem id="cash_details"
                  action="action_cash_book"
                  name="Cash Book"
                  parent="menu_cash_root"
                  />
    </data>
</openerp>