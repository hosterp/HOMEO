<openerp>
    <data>
        <record model="ir.ui.view" id="account_invoice_view_wizard_id">
            <field name="name">Product Details</field>
            <field name="model">customer.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group col="4">
                        <field name="partner_id" required="1" domain="[('customer','=',True)]"/>
                        <field name="type"/>
                    </group>
                    <group col="4">
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="invoice_wizard_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="customer_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="medicine_name_subcat"/>
                                    <field name="batch"/>
                                    <field name="product_of"/>
                                    <field name="medicine_grp"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="discount"/>
                                    <field name="unit_price"/>
                                    <field name="invoice_line_tax_id4"/>
                                    <field name="product_tax"/>
                                    <field name="price_subtotal"/>
                                    <field name="hsn_code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="get_details" type="object" string="View Details" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_account_invoice_view_wizard" model="ir.actions.act_window">
            <field name="name">Product Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer.wizard</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_invoice_view_wizard_id"/>
        </record>
    </data>
</openerp>